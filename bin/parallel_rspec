#!/usr/bin/env ruby
# frozen_string_literal: true

load File.expand_path("../with_rubygems", __FILE__) if ENV["RGV"]

require "rubygems"

bundler_spec = Gem::Specification.load(File.expand_path("../../bundler.gemspec", __FILE__))

parallel_tests = bundler_spec.development_dependencies.find do |dep|
  dep.name == "parallel_tests"
end

parallel_tests_requirement = parallel_tests.requirement.to_s

begin
  gem "parallel_tests", parallel_tests_requirement
  load Gem.bin_path("parallel_tests", "parallel_rspec")
rescue Gem::LoadError
  warn "We couln't activate parallel_tests (#{parallel_tests_requirement}). Try `gem install parallel_tests:'#{parallel_tests_requirement}'`"
end
